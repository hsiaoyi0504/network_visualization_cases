doctype html
html
  head

    title #{title}
    style
      include style.css
    script
      include cytoscape.js
  body
    h1 #{message}
    #cy
    script(type='text/javascript').
        var cy = cytoscape({
            container: document.getElementById('cy'), // container to render in

            elements: !{JSON.stringify(elements)}, //list of graph elements to start with

            style: [ // the stylesheet for the graph
                {
                  selector: 'node',
                  style: {
                    'background-color': '#666',
                    'label': 'data(id)'
                  }
                },
                {
                  selector: 'edge',
                  style: {
                    'width': 3,
                    'line-color': '#ccc',
                    'target-arrow-color': '#ccc',
                    'target-arrow-shape': 'triangle'
                  }
                }
            ],

            layout: {
                name: 'cose',
                rows: 30
            }

        });
